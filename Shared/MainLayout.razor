@inherits LayoutComponentBase

<PageTitle>PicLocker</PageTitle>

<div class="page">
    <main class="main">
        <div class="top-row px-4">
            <LoginDisplay />
        </div>
            <Sidebar isExpanded="@isExpanded" IsExpandedChanged="@(value => isExpanded = value)" />

        <article class="content px-4" style="@(isExpanded ? "margin-left: 15rem;" : "margin-left: 5rem;")">
            @Body
            
        </article>
    </main>
</div>

@code{
     public bool isExpanded { get; set; }

     protected override void OnInitialized()
    {
        
        isExpanded = false;
    }
}
